create database awais;
use  awais
show databases
CREATE TABLE user (
id INT AUTO_INCREMENT PRIMARY KEY,
 name VARCHAR(100) NOT NULL,
 email VARCHAR(100) UNIQUE NOT NULL,
 gender ENUM('Male', 'Female', 'Other'),
 date_of_birth DATE,
 created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

alter table user modify  email varchar(100)not null;

alter table user add constraint dobb check (dob>'1990-01-01');

select name,year(dob) from user;
select name, datediff(curdate(), dob) from user;

CREATE index idxemail ON user(email);


select * from user;
